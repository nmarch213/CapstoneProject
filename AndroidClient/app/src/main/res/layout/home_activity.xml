<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Home_Activity">


    <LinearLayout
        android:id="@+id/frag_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@color/UWFBlue"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROLL TIDE" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="16dp"
            android:background="@color/UWFBlue"
            android:elevation="4dp">

            <fragment
                android:id="@+id/match_details_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.capstoneimsports.capstoneimsports.fragments.Match_Details_Fragment"
                tools:layout="@layout/fragment_match_details_">

            </fragment>


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@color/CannonGreen"
            android:elevation="4dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@color/CannonGreen"
            android:elevation="4dp">

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
